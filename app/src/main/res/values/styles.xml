<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme mode res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="dialogTheme">@style/ListView</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#616161</item>
        <item name="android:textColorTertiary">#000000</item>
        <item name="android:textColorPrimaryInverse">#295055</item>
        <item name="android:textColorSecondaryInverse">#295055</item>
        <item name="android:textColorTertiaryInverse">#295055</item>
    </style>

    <!-- ActionBar styles -->


    <style name="ListView" parent="Widget.AppCompat.ListView">
        <item name="android:background">#FFFFFF</item>
        <item name="android:divider">@android:color/black</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="android:colorBackground">@color/primary_material_dark</item>
        <item name="android:listViewStyle">@style/ListViewDark</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#e0e0e0</item>
        <item name="android:textColorTertiary">#ffffff</item>
    </style>

    <style name="ListViewDark" parent="ListView">
        <item name="android:background">@color/primary_material_dark</item>
        <item name="android:divider">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="btnStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#5d6153</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.3</item>
        <item name="android:background">@drawable/btn_navigation</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="toggleButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#5d6153</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.3</item>
        <item name="android:background">@drawable/btn_toggle_synced</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
